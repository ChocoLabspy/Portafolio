    left: -2rem;
    top: 0;
    width: 12px;
    height: 12px;
    background: var(--bg-primary);
    border: 2px solid var(--accent-primary);
    border-radius: 50%;
    transform: translateX(-5px);
  }
  
  .timeline-item.current .timeline-marker {
    background: var(--accent-primary);
  }
  
  .marker-pulse {
